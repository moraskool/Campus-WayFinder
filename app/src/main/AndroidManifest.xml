<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.campuswayfinder">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />

    <!-- Sceneform requires OpenGL ES 3.0 or later. -->
    <uses-feature
        android:glEsVersion="0x00030000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"

        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CampusWayFinder"
        tools:targetApi="31">

        <!-- ARCore need to be installed, as the app does not include any non-AR features.
        For an "AR Optional" app, specify "optional" instead of "required".-->
        <meta-data android:name="com.google.ar.core" android:value="required" />

        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".StartIndoorActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="true"
            android:theme="@style/Theme.CampusWayFinder">
        </activity>

        <activity
            android:name=".ArrivedActivity"
            android:theme="@style/Theme.CampusWayFinder"
            android:exported="true">
        </activity>

        <activity
            android:name=".UnityARActivity"
            android:theme="@style/Theme.CampusWayFinder"
            android:screenOrientation="fullSensor"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|screenSize|smallestScreenSize|fontScale|layoutDirection|density"
            android:hardwareAccelerated="false"
            android:process=":Unity"
            android:exported="true">
        </activity>

        <activity
            android:name=".ChooseDestinationActivity"
            android:theme="@style/Theme.CampusWayFinder"
            android:exported="true">
        </activity>

        <activity
            android:name=".CustomScannerActivity"
            android:screenOrientation="fullSensor"
            android:stateNotNeeded="true"
            android:theme="@style/Theme.CampusWayFinder"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:exported="true">
        </activity>

        <activity
            android:name=".StartActivity"
            android:theme="@style/Theme.CampusWayFinder"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".StartOutdoorActivity"
            android:theme="@style/Theme.CampusWayFinder"
            android:exported="true">
        </activity>

        <meta-data
            android:name="com.google.ar.core"
            android:value="required"
            tools:replace="android:value"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />


    </application>

</manifest>